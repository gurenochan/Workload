<Page x:Class="Workload.Loading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Workload"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="600"
      MaxWidth="600"
      MaxHeight="350"
      Title="Loading">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="TalismanImage" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Source="Media/talisman_cropped.png" Stretch="Uniform" Grid.Column="1"/>
        <Label x:Name="ProgramNameLabel" Content="Workload" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="80" Width="240" TextBlock.FontSize="54" Grid.Column="0" FontFamily="SansSerif"/>
        <Label x:Name="MadeByLabel" Content="Made by tedechan" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" FontFamily="SansSerif" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Page>
